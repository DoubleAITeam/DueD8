{
  "name": "dued8",
  "version": "1.0.0",
  "description": "Electron + Vite + React + TS starter",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "predev": "electron-vite -c electron.vite.config.mts build",
    "dev:renderer": "vite",
    "dev:electron:wait": "wait-on file:dist-electron/main.js file:dist-electron/preload.js tcp:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 ELECTRON_ENABLE_LOGGING=1 electron .",
    "dev": "npm-run-all predev -p dev:renderer dev:electron:wait",
    "build": "electron-vite -c electron.vite.config.mts build",
    "preview": "electron-vite -c electron.vite.config.mts preview",
    "test": "npm-run-all test:smoke test:unit",
    "test:smoke": "node tests/run-tests.js",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:dmg": "npm run build && electron-builder --mac dmg"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@react-three/rapier": "^2.1.0",
    "ajv": "^8.17.1",
    "better-sqlite3": "^9.6.0",
    "jszip": "^3.10.1",
    "meshline": "^3.3.1",
    "pdfjs-dist": "^5.4.149",
    "pdfkit": "^0.17.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.180.0",
    "zod": "^4.1.9",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.7.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^28.3.1",
    "electron-vite": "^4.0.0",
    "jsdom": "^27.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.doubleai.dued8",
    "productName": "DueD8",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "dmg": {
      "title": "DueD8 Installer",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
